<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9e9e9"
    tools:context="com.example.ztz.myguanzhongwang.activity.SousuoActivity">
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#e9e9e9"
        >
        <ImageView
            android:id="@+id/sousuo_guanbi"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:src="@drawable/xiaoyuhaoxiao" />


        <LinearLayout
            android:id="@+id/editText"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/sousuo"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/sousuohei" />

            <EditText
                android:id="@+id/edit_sousuo"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:hint="搜索感兴趣的内容"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/sousuo_sousuo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="14sp"
            android:text="搜索"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/sousuo_recyclerview"
        android:layout_marginTop="6dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
